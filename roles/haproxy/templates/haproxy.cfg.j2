global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    tcp                 
    option  tcplog              
    option  dontlognull
    timeout connect 5000
    timeout client  50000       
    timeout server  50000

frontend http_front
    bind *:80
    default_backend harbor_cluster

backend harbor_cluster
    mode tcp
    balance source              
    {% for host in groups['registries'] %}
    server {{ host }} {{ host }}:80 check
    {% endfor %}
