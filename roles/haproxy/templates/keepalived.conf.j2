vrrp_script check_haproxy {
    script "killall -0 haproxy"
    interval 2
    weight 2
}

vrrp_instance VI_1 {
    state {{ keepalived_state }}
    interface {{ keepalived_interface }}
    virtual_router_id 51
    priority {{ keepalived_priority }}
    advert_int 1
    
    authentication {
        auth_type PASS
        auth_pass 1234
    }

    virtual_ipaddress {
        {{ virtual_ip }}/24
    }

    track_script {
        check_haproxy
    }
}
